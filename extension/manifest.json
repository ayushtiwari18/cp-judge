{
  "manifest_version": 3,
  "name": "CP Judge - Local Execution Engine",
  "version": "1.0.0",
  "description": "Execute competitive programming problems locally with instant feedback. Supports Codeforces, LeetCode, AtCoder, and more.",
  "author": "Ayush Tiwari",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "CP Judge Local"
  },

  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.codeforces.com/problemset/problem/*",
        "*://*.codeforces.com/contest/*/problem/*",
        "*://*.codeforces.com/gym/*/problem/*"
      ],
      "js": ["content/scrapers/codeforces.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.leetcode.com/problems/*"
      ],
      "js": ["content/scrapers/leetcode.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.atcoder.jp/contests/*/tasks/*"
      ],
      "js": ["content/scrapers/atcoder.js"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "*://*.codechef.com/problems/*",
        "*://*.codechef.com/*/problems/*"
      ],
      "js": ["content/scrapers/codechef.js"],
      "run_at": "document_idle"
    }
  ],

  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "http://localhost:3000/*",
    "*://*.codeforces.com/*",
    "*://*.leetcode.com/*",
    "*://*.atcoder.jp/*",
    "*://*.codechef.com/*"
  ],

  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ],

  "options_page": "options/options.html",

  "commands": {
    "run-tests": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "Run test cases on local judge"
    },
    "parse-problem": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Parse problem and extract test cases"
    }
  }
}
